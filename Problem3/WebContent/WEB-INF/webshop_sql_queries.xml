<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
	<sql-query name="getProductByProductId">
		<return alias="product" class="com.tacton.entity.Product" />
		
<![CDATA[
SELECT *
  FROM tacton.product where product_id= :productId
 
]]>
	</sql-query>
	
	<sql-query name="getCustomerByCustomerId">
		<return alias="customer" class="com.tacton.entity.Customer" />
		
<![CDATA[
SELECT *
  FROM tacton.customer where customer_id= :customerId
 
]]>
	</sql-query>
	
	<sql-query name="getAttributesById">
		<return alias="attribute" class="com.tacton.entity.Attribute" />
		
<![CDATA[
SELECT *
  FROM tacton.attribute where attribute_id= :attributeId
 
]]>
    </sql-query>
    
    <sql-query name="getAllAttributesByType">
		<return alias="attribute" class="com.tacton.entity.Attribute" />
		
<![CDATA[
SELECT *
  FROM tacton.attribute where type= :type.ATTRIBUTE
 
]]>
   </sql-query>
   
   <sql-query name="getAllAttributeGroupsByType">
		<return alias="attribute" class="com.tacton.entity.Attribute" />
		
<![CDATA[
SELECT *
  FROM tacton.attribute where type= :type.ATTRIBUTE_GROUP
 
]]>
   </sql-query>
</hibernate-mapping>